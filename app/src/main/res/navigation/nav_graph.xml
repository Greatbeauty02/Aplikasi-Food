<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/categoryFragment"> <fragment
    android:id="@+id/categoryFragment"
    android:name="com.uasppb.appfood054.Ui.fragment.CategoryFragment"
    android:label="Food App" tools:layout="@layout/fragment_category">
    <action
        android:id="@+id/action_categoryFragment_to_foodListFragment"
        app:destination="@id/foodListFragment" />
    <action
        android:id="@+id/action_categoryFragment_to_detailFragment"
        app:destination="@id/detailFragment" />
</fragment>

    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.uasppb.appfood054.Ui.fragment.FoodListFragment"
        android:label="Daftar Makanan"
        tools:layout="@layout/fragment_food_list">
        <argument
            android:name="strCategory"
            app:argType="string" />
        <action
            android:id="@+id/action_foodListFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.uasppb.appfood054.Ui.fragment.DetailFragment"
        android:label="Detail Makanan"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="idMeal"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.uasppb.appfood054.Ui.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>